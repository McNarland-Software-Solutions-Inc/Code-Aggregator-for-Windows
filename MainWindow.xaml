<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Code_Aggregator.MainWindow"
        Title="Code Aggregator"
        Width="800" Height="600">
    <StackPanel>
        <TextBlock Text="Welcome to Code Aggregator" Margin="10"/>
        <Button Name="SelectFolderButton" Content="Select Folder" HorizontalAlignment="Center" Click="SelectFolderButton_Click"/>
        <TreeView Name="FolderTreeView" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBox Name="OutputTextBox" Margin="10" Height="100" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
    </StackPanel>
</Window>
